{
  "name": "@shower/core",
  "description": "Core for Shower HTML presentation engine",
  "version": "3.3.0",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Vadim Makeev",
    "email": "pepelsbey@gmail.com",
    "url": "https://pepelsbey.net"
  },
  "homepage": "https://github.com/shower/core",
  "repository": "shower/core",
  "bugs": "https://github.com/shower/shower/issues",
  "license": "MIT",
  "keywords": [
    "shower",
    "presentation",
    "core"
  ],
  "main": "lib/shower.js",
  "files": [
    "lib",
    "dist/shower.js"
  ],
  "devDependencies": {
    "@types/nightwatch": "^2.0.6",
    "chai": "^4.3.4",
    "chromedriver": "^99.0.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "mocha": "^9.2.2",
    "nightwatch": "^1.5.1",
    "prettier": "^2.3.1",
    "puppeteer": "^13.5.2",
    "rollup": "^2.58.0",
    "sauce-connect-launcher": "^1.3.2",
    "serve": "^13.0.2",
    "serve-handler": "^6.1.3"
  },
  "scripts": {
    "build": "rollup --config",
    "build:watch": "rollup --config --watch",
    "serve": "serve dist",
    "lint": "eslint '**/*.{js,mjs}'",
    "lint:fix": "eslint '**/*.{js,mjs}' --fix",
    "format": "npm run format:js && npm run format:etc",
    "format:js": "prettier '**/*.{js,mjs}' --write",
    "format:etc": "prettier '**/*.{json,md,yml}' --write",
    "test": "npm run lint && npm run test:unit && npm run test:local",
    "test:unit": "mocha test/unit --require chai/register-should.js",
    "test:local": "nightwatch --env chrome-local --timeout 500",
    "test:sauce": "nightwatch --env chrome,firefox,safari",
    "prepare": "husky install"
  },
  "config": {
    "test_port": 8031
  }
}

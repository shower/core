{
  "name": "@shower/core",
  "description": "Core for Shower HTML presentation engine",
  "version": "3.0.0-2",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Vadim Makeev",
    "email": "pepelsbey@gmail.com",
    "url": "https://pepelsbey.net"
  },
  "homepage": "https://github.com/shower/core",
  "repository": "shower/core",
  "bugs": "https://github.com/shower/shower/issues",
  "license": "MIT",
  "keywords": [
    "shower",
    "presentation",
    "core"
  ],
  "main": "lib/shower.js",
  "files": [
    "lib",
    "dist/shower.js"
  ],
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-dom": "^1.8.1",
    "chromedriver": "^75.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "esm": "^3.2.25",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "mocha": "^6.1.4",
    "nightwatch": "^1.1.12",
    "prettier": "^1.18.2",
    "puppeteer": "^1.17.0",
    "rollup": "^1.15.6",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.3",
    "sauce-connect-launcher": "^1.2.7",
    "serve": "^11.0.2",
    "serve-handler": "^6.0.2",
    "yn": "^3.1.0"
  },
  "scripts": {
    "build": "rollup --config",
    "serve": "serve dist",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix",
    "format": "npm run format:js && npm run format:etc",
    "format:js": "prettier '**/*.js' --write",
    "format:etc": "prettier '**/*.{json,md,yml}' --write",
    "test": "npm run lint && npm run test:unit && npm run test:sauce",
    "test:unit": "mocha test/unit --require esm --require chai/register-should",
    "test:local": "nightwatch --env chrome-local",
    "test:sauce": "nightwatch --env chrome,firefox,safari,edge"
  }
}

{
  "name": "shower-core",
  "description": "Core for Shower HTML presentation engine",
  "version": "2.1.0",
  "author": {
    "name": "Vadim Makeev",
    "url": "http://pepelsbey.net/"
  },
  "maintainers": [
    {
      "name": "Denis Hananein",
      "email": "i@zloylos.me",
      "github-username": "zloylos",
      "role": "General architecture"
    },
    {
      "name": "Vadim Makeev",
      "email": "pepelsbey@gmail.com",
      "github-username": "pepelsbey",
      "role": "Author, idea, tests"
    }
  ],
  "homepage": "https://github.com/shower/core",
  "repository": "shower/core",
  "bugs": "http://github.com/shower/shower/issues",
  "license": "MIT",
  "keywords": [
    "shower",
    "presentation",
    "core"
  ],
  "main": "lib",
  "files": [
    "dist/shower.js"
  ],
  "devDependencies": {
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "chai-dom": "^1.5.0",
    "chromedriver": "^2.30.1",
    "eclint": "^2.2.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "husky": "^0.14.2",
    "jsdom": "^11.0.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^3.6.1",
    "mocha": "^3.4.2",
    "nightwatch": "^0.9.16",
    "rollup": "^0.43.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "serve": "^4.0.1"
  },
  "config": {
    "dotfiles": ".editorconfig .eslintrc.yml .gitignore .travis.yml"
  },
  "scripts": {
    "build": "rollup -c",
    "precommit": "lint-staged",
    "fix:ec": "eclint fix && eclint fix $npm_package_config_dotfiles",
    "fix:js": "eslint {lib,test}/**/*.js --fix",
    "fix": "npm run fix:ec && npm run fix:js",
    "lint:ec": "eclint check && eclint check $npm_package_config_dotfiles",
    "lint:js": "eslint {lib,test}/**/*.js",
    "lint": "npm run lint:ec && npm run lint:js",
    "test:unit": "mocha test/unit/**/*.js -r test/unit-harness",
    "test:local": "npm run build && nightwatch -e local",
    "test:sauce": "npm run build && nightwatch -e chrome && nightwatch -e firefox && nightwatch -e edge",
    "test": "npm run lint && npm run test:unit && npm run test:local"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*": [
      "eclint fix",
      "git add"
    ]
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  }
}

{
  "name": "@shower/core",
  "description": "Core for Shower HTML presentation engine",
  "version": "2.1.0",
  "author": {
    "name": "Vadim Makeev",
    "url": "https://pepelsbey.net"
  },
  "maintainers": [
    {
      "name": "Denis Hananein",
      "email": "i@zloylos.me",
      "github-username": "zloylos",
      "role": "General architecture"
    },
    {
      "name": "Vadim Makeev",
      "email": "pepelsbey@gmail.com",
      "github-username": "pepelsbey",
      "role": "Author, idea, tests"
    }
  ],
  "homepage": "https://github.com/shower/core",
  "repository": "shower/core",
  "bugs": "https://github.com/shower/shower/issues",
  "license": "MIT",
  "keywords": [
    "shower",
    "presentation",
    "core"
  ],
  "main": "lib",
  "files": [
    "dist/shower.js"
  ],
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-dom": "^1.8.1",
    "chromedriver": "^2.45.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "esm": "^3.0.84",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nightwatch": "^1.0.17",
    "prettier": "^1.15.3",
    "puppeteer": "^1.11.0",
    "rollup": "^1.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "serve": "^10.1.1"
  },
  "config": {
    "port": "8080"
  },
  "scripts": {
    "build": "rollup --config",
    "fix": "eslint --fix '**/*.js'",
    "lint": "eslint '**/*.js'",
    "prettier:js": "prettier --write '**/*.js'",
    "prettier:etc": "prettier --write '**/*.{json,md,yml}'",
    "prettier": "npm run prettier:js && npm run prettier:etc",
    "serve": "serve dist --listen $npm_package_config_port",
    "test:unit": "mocha test/unit --require esm --require chai/register-should",
    "test:local": "npm run build && nightwatch --env local",
    "test:sauce": "npm run build && nightwatch --env chrome,firefox,safari,edge",
    "test": "npm run lint && npm run test:unit && npm run test:sauce"
  }
}

{
  "extends": "standard",
  "env": {
    "browser": true
  },
  "globals": {
    "showerOptions": false
  },
  "rules": {
    "indent": ["error", 4, {
      "SwitchCase": 1
    }],
    "comma-dangle": ["error", "only-multiline"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never"
    }],
    "operator-linebreak": ["error", "after"],
    "padded-blocks": "off"
  }
}
